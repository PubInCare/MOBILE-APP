<resources>
    <!-- Base application theme. -->
    <style name="Theme.PubInCare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_500</item>
        <item name="colorSecondaryVariant">@color/cyan_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/navy_700</item>
        <item name="actionBarStyle">@style/Theme.Submission1.ActionBar</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Submission1.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="elevation" >0dp</item>
        <item name="background">@color/semi_transparent</item>
    </style>

    <style name="IconHome">
        <item name="android:maxWidth">72dp</item>
        <item name="android:maxHeight">72dp</item>
        <item name="android:tint">@color/gray_500</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gray_700</item>
        <item name="android:textColorSecondary">@color/gray_500</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/gray_500</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Title">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>